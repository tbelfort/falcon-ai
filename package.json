{
  "name": "falcon-ai",
  "version": "0.1.0",
  "description": "Pattern-based guardrail system for multi-agent development",
  "type": "module",
  "bin": {
    "falcon": "./dist/cli/index.js"
  },
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "tsc",
    "postinstall": "test -f ./dist/cli/postinstall.js && node ./dist/cli/postinstall.js || true",
    "test": "vitest",
    "test:run": "vitest run",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.30.0",
    "better-sqlite3": "^11.0.0",
    "commander": "^14.0.0",
    "yaml": "^2.8.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.11",
    "@types/node": "^22.0.0",
    "typescript": "^5.5.0",
    "vitest": "^2.0.0"
  },
  "keywords": [
    "ai",
    "guardrails",
    "patterns",
    "multi-agent",
    "cli"
  ],
  "author": "",
  "license": "MIT"
}
