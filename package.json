{
  "name": "falcon-ai",
  "version": "0.1.0",
  "description": "Pattern-based guardrail system for multi-agent development",
  "type": "module",
  "main": "./dist/workflow/index.js",
  "types": "./dist/workflow/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/workflow/index.js",
      "types": "./dist/workflow/index.d.ts"
    },
    "./workflow": {
      "import": "./dist/workflow/index.js",
      "types": "./dist/workflow/index.d.ts"
    },
    "./storage": {
      "import": "./dist/storage/db.js",
      "types": "./dist/storage/db.d.ts"
    },
    "./schemas": {
      "import": "./dist/schemas/index.js",
      "types": "./dist/schemas/index.d.ts"
    },
    "./attribution": {
      "import": "./dist/attribution/index.js",
      "types": "./dist/attribution/index.d.ts"
    },
    "./injection": {
      "import": "./dist/injection/index.js",
      "types": "./dist/injection/index.d.ts"
    },
    "./evolution": {
      "import": "./dist/evolution/index.js",
      "types": "./dist/evolution/index.d.ts"
    },
    "./metrics": {
      "import": "./dist/metrics/index.js",
      "types": "./dist/metrics/index.d.ts"
    },
    "./services": {
      "import": "./dist/services/index.js",
      "types": "./dist/services/index.d.ts"
    },
    "./config": {
      "import": "./dist/config/loader.js",
      "types": "./dist/config/loader.d.ts"
    }
  },
  "bin": {
    "falcon": "./dist/cli/index.js"
  },
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "tsc",
    "postinstall": "test -f ./dist/cli/postinstall.js && node ./dist/cli/postinstall.js || true",
    "test": "vitest",
    "test:run": "vitest run",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.30.0",
    "better-sqlite3": "^11.0.0",
    "commander": "^14.0.0",
    "yaml": "^2.8.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.11",
    "@types/node": "^22.0.0",
    "typescript": "^5.5.0",
    "vitest": "^2.0.0"
  },
  "keywords": [
    "ai",
    "guardrails",
    "patterns",
    "multi-agent",
    "cli"
  ],
  "author": "Tom Belfort",
  "license": "MIT",
  "homepage": "https://getfalcon.dev",
  "repository": {
    "type": "git",
    "url": "https://github.com/tbelfort/falcon-ai.git"
  }
}
