{
  "name": "falcon-ai",
  "version": "0.1.0",
  "description": "Pattern-based guardrail system for multi-agent development",
  "type": "module",
  "workspaces": [
    "apps/*"
  ],
  "main": "./dist/guardrail/workflow/index.js",
  "types": "./dist/guardrail/workflow/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/guardrail/workflow/index.js",
      "types": "./dist/guardrail/workflow/index.d.ts"
    },
    "./workflow": {
      "import": "./dist/guardrail/workflow/index.js",
      "types": "./dist/guardrail/workflow/index.d.ts"
    },
    "./storage": {
      "import": "./dist/guardrail/storage/db.js",
      "types": "./dist/guardrail/storage/db.d.ts"
    },
    "./schemas": {
      "import": "./dist/guardrail/schemas/index.js",
      "types": "./dist/guardrail/schemas/index.d.ts"
    },
    "./attribution": {
      "import": "./dist/guardrail/attribution/index.js",
      "types": "./dist/guardrail/attribution/index.d.ts"
    },
    "./injection": {
      "import": "./dist/guardrail/injection/index.js",
      "types": "./dist/guardrail/injection/index.d.ts"
    },
    "./evolution": {
      "import": "./dist/guardrail/evolution/index.js",
      "types": "./dist/guardrail/evolution/index.d.ts"
    },
    "./metrics": {
      "import": "./dist/guardrail/metrics/index.js",
      "types": "./dist/guardrail/metrics/index.d.ts"
    },
    "./services": {
      "import": "./dist/guardrail/services/index.js",
      "types": "./dist/guardrail/services/index.d.ts"
    },
    "./config": {
      "import": "./dist/config/loader.js",
      "types": "./dist/config/loader.d.ts"
    },
    "./pm-contracts": {
      "import": "./dist/pm/contracts/index.js",
      "types": "./dist/pm/contracts/index.d.ts"
    }
  },
  "bin": {
    "falcon": "./dist/cli/index.js"
  },
  "files": [
    "dist/**/*",
    "CORE/**/*"
  ],
  "scripts": {
    "build": "tsc",
    "pm:api:dev": "npm run build && node dist/pm/api/main.js",
    "pm:db:migrate": "npm run build && node dist/pm/db/cli.js migrate",
    "pm:db:seed": "npm run build && node dist/pm/db/cli.js seed",
    "pm:ui:dev": "npm --workspace pm-dashboard run dev",
    "pm:ui:test": "npm --workspace pm-dashboard run test",
    "pm:ui:build": "npm --workspace pm-dashboard run build",
    "postinstall": "test -f ./dist/cli/postinstall.js && node ./dist/cli/postinstall.js || true",
    "test": "vitest",
    "test:run": "vitest run",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.30.0",
    "@octokit/rest": "^22.0.1",
    "@octokit/types": "^16.0.0",
    "better-sqlite3": "^11.0.0",
    "commander": "^14.0.0",
    "cors": "^2.8.5",
    "drizzle-orm": "^0.38.0",
    "express": "^4.19.2",
    "express-rate-limit": "^8.2.1",
    "simple-git": "^3.30.0",
    "ws": "^8.18.0",
    "yaml": "^2.8.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.11",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-rate-limit": "^5.1.3",
    "@types/node": "^22.0.0",
    "@types/supertest": "^2.0.16",
    "drizzle-kit": "^0.29.0",
    "supertest": "^6.3.4",
    "typescript": "^5.5.0",
    "vitest": "^2.0.0"
  },
  "keywords": [
    "ai",
    "guardrails",
    "patterns",
    "multi-agent",
    "cli"
  ],
  "author": "Tom Belfort",
  "license": "MIT",
  "homepage": "https://getfalcon.dev",
  "repository": {
    "type": "git",
    "url": "https://github.com/tbelfort/falcon-ai.git"
  }
}
